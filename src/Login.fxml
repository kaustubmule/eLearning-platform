<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Label fx:id="loginLabel" layoutX="175.0" layoutY="50.0" prefHeight="62.0" prefWidth="312.0" text="Login ">
               <font>
                  <Font size="42.0" />
               </font>
            </Label>
            <TextField fx:id="userField" layoutX="182.0" layoutY="174.0" prefHeight="19.0" prefWidth="298.0" />
            <TextField fx:id="passwordField" layoutX="182.0" layoutY="268.0" prefHeight="19.0" prefWidth="298.0" />
            <Label fx:id="nameLabel" layoutX="183.0" layoutY="156.0" text="Name" />
            <Label fx:id="pwdLabel" layoutX="182.0" layoutY="250.0" text="SAP ID" />
            <Button fx:id="loginButton" layoutX="272.0" layoutY="326.0" mnemonicParsing="false" onAction="#afterClicked" prefHeight="50.0" prefWidth="97.0" text="Login" />
            <Label fx:id="wrongnameLabel" layoutX="186.0" layoutY="205.0" textFill="RED" />
            <Label fx:id="wrongpwdLabel" layoutX="187.0" layoutY="299.0" textFill="RED" />
            <Label fx:id="successMSG" layoutX="52.0" layoutY="72.0" prefHeight="81.0" prefWidth="537.0">
               <font>
                  <Font size="55.0" />
               </font>
            </Label>
      </children>
    </AnchorPane>
  </children>
</VBox>
